<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ai.aichatbackend.mapper.PromptsTypeMapper">

    <resultMap type="com.ai.aichatbackend.domain.PromptsType" id="PromptsTypeMap">
        <result property="id" column="ID" jdbcType="VARCHAR"/>
        <result property="description" column="DESCRIPTION" jdbcType="VARCHAR"/>
        <result property="promptsType" column="PROMPTS_TYPE" jdbcType="VARCHAR"/>
        <result property="updateTime" column="UPDATE_TIME" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PromptsTypeMap">
        select
          ID, DESCRIPTION, PROMPTS_TYPE, UPDATE_TIME
        from PROMPTS_TYPE
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="getPromptsTypeList" resultMap="PromptsTypeMap">
        select
          ID, DESCRIPTION, PROMPTS_TYPE, UPDATE_TIME
        from PROMPTS_TYPE
        <where>
            <if test="id != null and id != ''">
                and ID = #{id}
            </if>
            <if test="description != null and description != ''">
                and DESCRIPTION = #{description}
            </if>
            <if test="promptsType != null and promptsType != ''">
                and PROMPTS_TYPE = #{promptsType}
            </if>
            <if test="updateTime != null">
                and UPDATE_TIME = #{updateTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="save" keyProperty="id" useGeneratedKeys="true">
        insert into PROMPTS_TYPE(ID, DESCRIPTION, PROMPTS_TYPE, UPDATE_TIME)
        values (#{id}, #{description}, #{promptsType}, NOW())
    </insert>

    <!--通过主键修改数据-->
    <update id="edit">
        update PROMPTS_TYPE
        <set>
            <if test="description != null and description != ''">
                DESCRIPTION = #{description},
            </if>
            <if test="promptsType != null and promptsType != ''">
                PROMPTS_TYPE = #{promptsType},
            </if>
                UPDATE_TIME = NOW(),
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteByIdReal">
        delete from PROMPTS_TYPE where ID = #{id}
    </delete>

</mapper>

